# ================================
# RestoreAssist Environment Configuration
# ================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# ================================
# Application Settings
# ================================
NODE_ENV=production
PORT=3001
API_URL=https://api.restoreassist.app

# ================================
# Frontend URLs
# ================================
VITE_API_URL=https://api.restoreassist.app
VITE_APP_URL=https://restoreassist.app
VITE_APP_VERSION=1.0.0

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://user:password@localhost:5432/restoreassist
DATABASE_SSL=true

# ================================
# Authentication & Security
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
ALLOWED_ORIGINS=https://restoreassist.app,https://www.restoreassist.app

# ================================
# Google OAuth Configuration
# ================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.restoreassist.app/api/auth/google/callback

# ================================
# Sentry Error Monitoring
# ================================
# Frontend Sentry DSN
VITE_SENTRY_DSN=https://your-public-key@sentry.io/your-project-id

# Backend Sentry DSN
SENTRY_DSN=https://your-public-key@sentry.io/your-backend-project-id

# Sentry Performance Monitoring (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ================================
# Stripe Payment Configuration
# ================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# ================================
# AI Services
# ================================
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key
OPENAI_API_KEY=sk-your-openai-key

# ================================
# Email Configuration (SMTP)
# ================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=RestoreAssist <noreply@restoreassist.app>

# ================================
# ServiceM8 Integration (Optional)
# ================================
SERVICEM8_API_KEY=your-servicem8-api-key
SERVICEM8_DOMAIN=your-company.servicem8.com

# ================================
# Google Drive Integration (Optional)
# ================================
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=https://api.restoreassist.app/api/integrations/google-drive/callback

# ================================
# Ascora CRM Integration (Optional)
# ================================
ASCORA_API_URL=https://api.ascora.com.au
ASCORA_API_KEY=your-ascora-api-key
ASCORA_ACCOUNT_ID=your-account-id

# ================================
# Storage & CDN
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=restoreassist-uploads
CDN_URL=https://cdn.restoreassist.app

# ================================
# Monitoring & Analytics
# ================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Feature Flags
# ================================
ENABLE_TRIAL_MODE=true
ENABLE_SERVICEM8=true
ENABLE_GOOGLE_DRIVE=true
ENABLE_ASCORA=false
ENABLE_EMAIL_NOTIFICATIONS=true

# ================================
# Development & Debug
# ================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER_DOCS=false

# ================================
# Vercel Deployment
# ================================
# These are automatically set by Vercel
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=
# VERCEL_GIT_COMMIT_SHA=