#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for file-specific checks
npx lint-staged

# Type check backend
echo "ğŸ” Type checking backend..."
cd packages/backend && npx tsc --noEmit && cd ../..

# Type check frontend
echo "ğŸ” Type checking frontend..."
cd packages/frontend && npx tsc --noEmit && cd ../..

echo "âœ… Pre-commit checks passed!"
