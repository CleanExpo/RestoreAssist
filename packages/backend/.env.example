# Server Configuration
PORT=3001
NODE_ENV=development

# Sentry Error Monitoring (optional but recommended for production)
# Get DSN from https://sentry.io after creating a project
# Leave empty to disable error monitoring
SENTRY_DSN=

# Anthropic API Key (get from https://console.anthropic.com)
# Required for AI-powered report generation and Skills API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Skills Configuration
# Skills are automatically initialized on startup
# To disable skills, set to false (will use standard prompts)
ENABLE_SKILLS=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Database Configuration
# Set to "true" to use PostgreSQL, "false" for in-memory storage
USE_POSTGRES=false

# PostgreSQL Connection (only needed if USE_POSTGRES=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restoreassist
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# Export Configuration
BASE_URL=http://localhost:3001

# Email Configuration
# Provider: 'smtp', 'sendgrid', or 'resend' (defaults to 'smtp' if not set)
EMAIL_PROVIDER=smtp
# From address used in all emails (required)
EMAIL_FROM="RestoreAssist" <noreply@restoreassist.com>

# SMTP Configuration (for EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (for EMAIL_PROVIDER=sendgrid)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Resend Configuration (for EMAIL_PROVIDER=resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Google Drive Integration (optional - OAuth 2.0 required)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/integrations/google-drive/callback

# ServiceM8 CRM Integration (optional)
SERVICEM8_API_KEY=your_servicem8_api_key_here
SERVICEM8_DOMAIN=your_company_domain

# Ascora CRM Integration (optional)
# URL template: {instance} will be replaced with company instance name
ASCORA_API_URL_TEMPLATE=https://{instance}.ascora.com/api/v1
ASCORA_WEBHOOK_SECRET=your_webhook_secret_here
# 32-character encryption key for API tokens (generate with: openssl rand -hex 16)
ENCRYPT_KEY=your_32_char_encryption_key_here

# Free Trial System - Google OAuth (required for landing page)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Free Trial System - Stripe Payment Verification (optional)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key

# CORS Origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
