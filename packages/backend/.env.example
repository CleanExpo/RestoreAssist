# Server Configuration
PORT=3001
NODE_ENV=development

# Sentry Error Monitoring (optional but recommended for production)
# Get DSN from https://sentry.io after creating a project
# Leave empty to disable error monitoring
SENTRY_DSN=

# Anthropic API Key (get from https://console.anthropic.com)
# Required for AI-powered report generation and Skills API
# CRITICAL: Never commit real API keys - this is an example only
ANTHROPIC_API_KEY=sk-ant-api03-EXAMPLE-ONLY-DO-NOT-USE-GET-YOUR-OWN

# Skills Configuration
# Skills are automatically initialized on startup
# To disable skills, set to false (will use standard prompts)
ENABLE_SKILLS=true

# JWT Authentication
# CRITICAL SECURITY WARNING:
# 1. JWT_SECRET and JWT_REFRESH_SECRET MUST BE DIFFERENT!
# 2. NEVER use example/default values in production
# 3. Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# 4. Run the command TWICE to get two different secrets
# 5. These are EXAMPLE values only - NEVER use them!
JWT_SECRET=CHANGE_THIS_EXAMPLE_VALUE_USE_CRYPTO_COMMAND_ABOVE
JWT_REFRESH_SECRET=CHANGE_THIS_DIFFERENT_EXAMPLE_VALUE_USE_CRYPTO_COMMAND
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Database Configuration
# Set to "true" to use PostgreSQL, "false" for in-memory storage
USE_POSTGRES=false

# PostgreSQL Connection (only needed if USE_POSTGRES=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restoreassist
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# Prisma Database URLs (Prisma Accelerate)
# Accelerate connection (used for queries with connection pooling)
DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=your_prisma_accelerate_api_key
# Direct connection (used for migrations and schema operations)
DIRECT_DATABASE_URL=postgres://user:password@db.prisma.io:5432/postgres?sslmode=require

# Export Configuration
BASE_URL=http://localhost:3001

# Email Configuration
# Provider: 'smtp', 'sendgrid', or 'resend' (defaults to 'smtp' if not set)
EMAIL_PROVIDER=smtp
# From address used in all emails (required)
EMAIL_FROM="RestoreAssist" <airestoreassist@gmail.com>

# SMTP Configuration (for EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (for EMAIL_PROVIDER=sendgrid)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Resend Configuration (for EMAIL_PROVIDER=resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Google Drive Integration (optional - OAuth 2.0 required)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/integrations/google-drive/callback

# ServiceM8 CRM Integration (optional)
SERVICEM8_API_KEY=your_servicem8_api_key_here
SERVICEM8_DOMAIN=your_company_domain

# Ascora CRM Integration (optional)
# URL template: {instance} will be replaced with company instance name
ASCORA_API_URL_TEMPLATE=https://{instance}.ascora.com/api/v1
ASCORA_WEBHOOK_SECRET=your_webhook_secret_here
# 32-character encryption key for API tokens (generate with: openssl rand -hex 16)
ENCRYPT_KEY=your_32_char_encryption_key_here

# Free Trial System - Google OAuth (required for landing page)
# Get from: https://console.cloud.google.com/apis/credentials
# CRITICAL: GOOGLE_CLIENT_SECRET should NEVER be exposed - keep it secret!
GOOGLE_CLIENT_ID=EXAMPLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-EXAMPLE_SECRET_NEVER_USE_THIS

# Free Trial System - Stripe Payment Verification (optional)
# Get from: https://dashboard.stripe.com/apikeys
# CRITICAL SECURITY WARNING:
# - NEVER expose secret keys (sk_live_ or sk_test_) to frontend
# - Use test keys (sk_test_) for development
# - Use live keys (sk_live_) for production ONLY
# - These are EXAMPLE values - NEVER use them!
STRIPE_SECRET_KEY=sk_test_EXAMPLE_KEY_NEVER_USE_GET_YOUR_OWN

# Stripe Product IDs (create in Stripe Dashboard)
# Get from: https://dashboard.stripe.com/products
STRIPE_PRODUCT_FREE_TRIAL=prod_EXAMPLE_FREE_TRIAL_ID
STRIPE_PRODUCT_MONTHLY=prod_EXAMPLE_MONTHLY_ID
STRIPE_PRODUCT_YEARLY=prod_EXAMPLE_YEARLY_ID

# Stripe Price IDs (create in Stripe Dashboard)
# Get from: https://dashboard.stripe.com/prices
STRIPE_PRICE_FREE_TRIAL=price_EXAMPLE_FREE_TRIAL_ID
STRIPE_PRICE_MONTHLY=price_EXAMPLE_MONTHLY_ID
STRIPE_PRICE_YEARLY=price_EXAMPLE_YEARLY_ID

# Webhook secret for Stripe event verification
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_EXAMPLE_SECRET_NEVER_USE_GET_YOUR_OWN

# CORS Origins
# Comma-separated list of allowed origins for CORS
# Production domains (restoreassist.app, *.vercel.app) are automatically allowed
# Add additional custom domains here if needed
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Supabase Configuration (if using Supabase as database)
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://xxxxxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Context7 API (for documentation fetching)
# Get from: https://context7.com/api-keys
CONTEXT7_API_KEY=your_context7_api_key_here

# GitHub Token (for repository operations)
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, read:user
# CRITICAL: This is an EXAMPLE - generate your own token!
GITHUB_TOKEN=ghp_EXAMPLE_TOKEN_NEVER_USE_GET_YOUR_OWN

# Vercel Deployment (for automated deployments)
# Get from: https://vercel.com/account/tokens
# CRITICAL: This is an EXAMPLE - generate your own token!
VERCEL_TOKEN=EXAMPLE_VERCEL_TOKEN_NEVER_USE
