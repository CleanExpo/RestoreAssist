{
  "buildCommand": "npm install && npm run build --workspace=packages/backend && npm run build --workspace=packages/frontend",
  "outputDirectory": "packages/frontend/dist",
  "installCommand": "npm install",
  "functions": {
    "packages/backend/api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/packages/backend/api"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/frontend/dist/$1"
    }
  ]
}
