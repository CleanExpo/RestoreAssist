{
  "buildCommand": "npm install --prefix packages/frontend && npm run build --prefix packages/frontend",
  "outputDirectory": "packages/frontend/dist",
  "installCommand": "echo 'Skipping root install'",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://restore-assist-backend.vercel.app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
