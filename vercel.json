{
  "version": 2,
  "builds": [
    {
      "src": "packages/backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "api/**"
        ]
      }
    },
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/frontend/$1"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build --workspace=packages/backend && npm run build --workspace=packages/frontend"
}
