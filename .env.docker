# ================================
# RestoreAssist Docker Environment Configuration
# ================================
# Copy this file to .env.docker.local and update with your values
# DO NOT commit .env.docker.local to version control

# ================================
# PostgreSQL Configuration (Docker Service)
# ================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=restoreassist
POSTGRES_PORT=5432

# ================================
# Application Settings
# ================================
NODE_ENV=production
APP_PORT=3001
DEBUG=false
LOG_LEVEL=info

# ================================
# Database Configuration (Automatic - uses Docker service)
# ================================
# These are automatically constructed to point to the Docker PostgreSQL service
# DATABASE_URL=postgresql://postgres:your_password@postgres:5432/restoreassist?schema=public
# DIRECT_URL=postgresql://postgres:your_password@postgres:5432/restoreassist?schema=public
DATABASE_SSL=false

# ================================
# NextAuth Configuration
# ================================
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=generate_a_secure_random_string_here_use_openssl_rand_base64_32

# ================================
# JWT Secrets
# ================================
JWT_SECRET=generate_a_secure_random_string_here_use_openssl_rand_base64_32
JWT_REFRESH_SECRET=generate_a_different_secure_random_string_here_use_openssl_rand_base64_32
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ================================
# Google OAuth Configuration
# ================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/callback/google

# ================================
# AI Services
# ================================
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here

# ================================
# Stripe Payment Configuration
# ================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# ================================
# Email Configuration (SMTP)
# ================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=RestoreAssist <noreply@restoreassist.app>

# ================================
# AWS S3 Storage (Optional)
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=restoreassist-uploads

# ================================
# ServiceM8 Integration (Optional)
# ================================
SERVICEM8_API_KEY=your-servicem8-api-key
SERVICEM8_DOMAIN=your-company.servicem8.com

# ================================
# Google Drive Integration (Optional)
# ================================
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/integrations/google-drive/callback

# ================================
# Ascora CRM Integration (Optional)
# ================================
ASCORA_API_URL=https://api.ascora.com.au
ASCORA_API_KEY=your-ascora-api-key
ASCORA_ACCOUNT_ID=your-account-id

# ================================
# Monitoring & Analytics (Optional)
# ================================
# Sentry
SENTRY_DSN=https://your-public-key@sentry.io/your-project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ================================
# Feature Flags
# ================================
ENABLE_TRIAL_MODE=true
ENABLE_SERVICEM8=false
ENABLE_GOOGLE_DRIVE=false
ENABLE_ASCORA=false
ENABLE_EMAIL_NOTIFICATIONS=true

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Security
# ================================
ALLOWED_ORIGINS=http://localhost:3001
