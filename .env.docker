# ============================================
# Docker Environment Configuration
# Copy this file to .env for Docker development
# ============================================

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=restoreassist
POSTGRES_USER=restoreassist
POSTGRES_PASSWORD=change_this_secure_password_in_production

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
PORT=3001

# ==========================================
# Frontend URLs
# ==========================================
VITE_API_URL=https://api.restoreassist.app
VITE_APP_URL=https://restoreassist.app
VITE_APP_VERSION=1.0.0

# ==========================================
# JWT & Security
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=https://restoreassist.app,https://www.restoreassist.app

# ==========================================
# Google OAuth
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.restoreassist.app/api/auth/google/callback

# ==========================================
# Sentry Error Monitoring
# ==========================================
VITE_SENTRY_DSN=https://your-public-key@sentry.io/your-project-id
SENTRY_DSN=https://your-public-key@sentry.io/your-backend-project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ==========================================
# Stripe Payment
# ==========================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# ==========================================
# AI Services
# ==========================================
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key

# ==========================================
# Email Configuration
# ==========================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=RestoreAssist <noreply@restoreassist.app>

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Production Settings
# ==========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER_DOCS=false
